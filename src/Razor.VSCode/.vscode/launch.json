// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/test/testapps/",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/client/out/**/*.js"
            ],
            "preLaunchTask": "WatchPackageAndCompileClient"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/test/testapps/",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/client/out/test"
            ],
            "outFiles": [
                "${workspaceFolder}/client/out/test/**/*.js"
            ],
            "preLaunchTask": "CompilePackageAndClient"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Unit Tests",
            "program": "${workspaceFolder}/client/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/client/out/unittest"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "CompilePackageAndClient"
        },
    ]
}
