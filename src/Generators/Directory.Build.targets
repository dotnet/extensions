<Project>
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.targets', '$(MSBuildThisFileDirectory)../'))" />

  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <Api>false</Api>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Stop complaining about enabling /doc for tests -->
    <NoWarn>$(NoWarn);RT0000</NoWarn>

    <!-- Stop warnings about banned symbols in generators -->
    <!-- https://github.com/dotnet/roslyn/issues/63290 -->
    <NoWarn>$(NoWarn);RS1035</NoWarn>
  </PropertyGroup>
</Project>
