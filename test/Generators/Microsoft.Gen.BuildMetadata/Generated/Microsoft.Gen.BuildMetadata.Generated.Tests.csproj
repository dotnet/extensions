  <ItemGroup>
    <ProjectReference Include="..\..\..\..\src\Generators\Microsoft.Gen.BuildMetadata\Microsoft.Gen.BuildMetadata.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" ProjectUnderTest="true"/>
    <ProjectReference Include="..\..\..\..\src\Libraries\Microsoft.Extensions.AmbientMetadata.Build\Microsoft.Extensions.AmbientMetadata.Build.csproj" />
    <ProjectReference Include="..\..\..\..\src\Libraries\Microsoft.Extensions.Hosting.Testing\Microsoft.Extensions.Hosting.Testing.csproj" />
  </ItemGroup>

   <ItemGroup>
    <Compile Include="..\TestClasses\**\*.cs" LinkBase="TestClasses" />
    <Compile Include="..\TestClasses\**\*.txt" LinkBase="TestClasses" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="..\TestClasses\TestStartup.cs" />
  </ItemGroup>

  <Import Project="Microsoft.Gen.BuildMetadata.Generated.Tests.props" />
</Project>
