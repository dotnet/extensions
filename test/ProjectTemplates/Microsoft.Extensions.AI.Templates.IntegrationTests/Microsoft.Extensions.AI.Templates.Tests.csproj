<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Tests for Microsoft.Extensions.AI.Templates.</Description>
    <IsUnitTestProject>false</IsUnitTestProject>
    <IsIntegrationTestProject>true</IsIntegrationTestProject>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>$(NoWarn);CA1063;CA1716;CA1861;CA2201;VSTHRD003;S104;S125;S2699</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.XUnitExtensions" />
    <PackageReference Include="Microsoft.TemplateEngine.Authoring.TemplateVerifier" />
    <PackageReference Include="Microsoft.TemplateEngine.TestHelper" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Shared\Shared.Tests.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Infrastructure\*.cs" Link="Infrastructure\%(Filename)%(Extension)" />

    <Compile Remove="Snapshots\**\*.*" />
    <None Include="Snapshots\**\*.*" />

    <Compile Remove="ExecutionTestSandbox\**\*.*" />
    <None Include="ExecutionTestSandbox\**\*.*" />

    <None Include="README.md" />
  </ItemGroup>

</Project>
